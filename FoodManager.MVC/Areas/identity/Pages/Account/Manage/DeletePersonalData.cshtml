@page
@using FoodManager.Application.Resources.Localizations
@model DeletePersonalDataModel
@{
    ViewData["Title"] = @Lang.DeleteAccount;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>@Lang.DeleteAccountWarning</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="@Lang.EnterCurrentPasswordMessage" />
                <label asp-for="Input.Password" class="form-label">@Lang.Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">@Lang.DeleteAccount</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
