@using FoodManager.Application.Resources.Localizations
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FoodManager.Application.ProductCategory.Commands.CreateProductCategory.CreateProductCategoryCommand

<!-- Modal -->
<div class="modal fade" id="createProductCategoryModal" tabindex="-1" aria-labelledby="createProductCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="ProductCategories" asp-action="CreateProductCategory" asp-antiforgery="true">

                <div class="modal-header">
                    <h5 class="modal-title" id="createProductCategoryModalLabel">@Lang.AddNewCategory</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Lang.Close</button>
                    <input type="submit" value="@Lang.Add" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
